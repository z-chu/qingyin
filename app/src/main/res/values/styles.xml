<resources>
    <attr name="surfaceItemBackground" format="color|reference"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item>

        <!-- 在 colorPrimary 上绘制时传递文本/图标的可访问性指南的颜色。 -->
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>

        <!-- 在 colorSecondary 上绘制时传递文本/图标的可访问性指南的颜色。 -->
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- 表面颜色会影响组件的表面，例如卡片，工作表和菜单。 -->
        <item name="colorSurface">@color/colorSurface</item>

        <!-- 在表面颜色上绘制时传递文本/图标的可访问性指南的颜色。 -->
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- 错误颜色表示文本字段等组件的错误状态 -->
        <item name="colorError">@color/colorError</item>

        <!-- 在 colorError 之上绘制时，传递文本/图标的可访问性指南的颜色。-->
        <item name="colorOnError">@color/colorOnError</item>

        <!--应用的背景颜色 不能直接设置颜色值，要设置引用-->
        <item name="android:colorBackground">@color/colorBackground</item>

        <!-- 在背景颜色上绘制时传递文本/图标的辅助功能指南的颜色。 -->
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <item name="dialogCornerRadius">4dp</item>

        <!--用于背景为colorSurface的表单条目-->
        <item name="surfaceItemBackground">@drawable/surface_item_background</item>

        <item name="settingRowLayoutStyle">@style/SettingRowLayoutStyle</item>


        <!--
       <item name="android:textColorPrimary">@color/md_grey_900</item>

       <item name="android:textColorSecondary">@color/md_blue_100</item>

        <item name="android:textColorTertiary">@color/md_grey_900</item>
       -->
    </style>


    <style name="Qy.TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?textAppearanceBody1</item>
    </style>

    <style name="SettingRowLayoutStyle">
        <item name="android:background">?surfaceItemBackground</item>
    </style>

    <style name="AlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="LoginDialogStyle" parent="AlertDialogStyle">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
